<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>BlogIT</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container">
            <div class="card-container d-flex flex-wrap justify-content-center gap-3 mt-4">
                <% if(blogs){%>
                    <% blogs.forEach((blog)=> { %>
                        <div class="card" style="width: 18rem;">
                            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= blog.title %>
                                </h5>
                                <a href="<%= `/blog/${blog._id}` %>" class="btn btn-primary">View</a>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>
            </div>
        </div>

</body>
<%- include('./partials/scripts') %>

</html>